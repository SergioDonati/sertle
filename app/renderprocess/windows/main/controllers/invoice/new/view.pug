#newinvoice-header.container-flex
	.flex-col
		h2 Nuova Fattura
	.flex-col
		ul#invoiceNav.nav.nav-pills
			li.active(role="presentation"): a(href="#", bind-event, bind-event-click="compileNavClick") Compila
			li(role="presentation"): a(href="#", bind-event, bind-event-click="checkNavClick") Controlla
	div(style="margin-left: auto;")
		button#emit-btn.btn.btn-success(bind-event, bind-event-click="saveInvoice", style="display:none;")
			span.fa.fa-floppy-o
			| Emetti Fattura

#compileInvoice.row
	#info.col-xs-5
		#general-info(dynamicload-component=true, component="generalInfo")
		#nominee(dynamicload-component=true, component="nominee")
		#issuer(dynamicload-component=true, component="issuer")
	#items.col-xs-7(dynamicload-component=true, component="items")
#checkInvoice(style="display:none;")
	iframe(src="" style="width: 100%;height: 476px;")
