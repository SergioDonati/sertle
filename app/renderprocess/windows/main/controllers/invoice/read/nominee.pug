.head
	h4.head-title Cliente
#nominee-data.container-fluid
	.row
		.col-xs-2
			label Nome:
		.col-xs-10
			span#nominee-name #{invoice.nominee.name}
	.row
		.col-xs-7
			.row.vertical-align
				.col-xs-4
					label P. IVA:
				.col-xs-8
					span#nominee-piva #{invoice.nominee.piva}
			.row.vertical-align
				.col-xs-4
					label.control-label Codice Fiscale:
				.col-xs-8
					span#nominee-fiscalcode #{invoice.nominee.fiscalCode}
			.row
				.col-xs-4
					label Telefono:
				.col-xs-8
					span#nominee-phone
						if invoice.nominee.phones && invoice.nominee.phones.length>0
							| #{invoice.nominee.phones[0].number}
		.col-xs-5
			label Indirizzo:
			p#nominee-address
				if invoice.nominee.addresses
					| #{invoice.nominee.addresses[0].street}, #{invoice.nominee.addresses[0].number}
					br
					| #{invoice.nominee.addresses[0].postalCode} #{invoice.nominee.addresses[0].city} #{invoice.nominee.addresses[0].nation}
